<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.harsh.mywallet.BudgetActivity">
<RelativeLayout
    android:id="@+id/activity_budget"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="0dp"
    android:paddingTop="0dp"

    android:paddingLeft="0dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monthlyCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/monthly">

            <TextView
                android:text="MONTHLY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="2"
                android:textSize="30sp"
                android:paddingLeft="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edMonthly"
                android:layout_weight="1" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monthlyCard"
        android:id="@+id/daily"
        android:layout_marginTop="80dp"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:text="Daily"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:gravity="center_vertical" />

        <TextView
            android:text=":"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edDaily"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daily"
        android:id="@+id/weekly"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:text="Weekly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:gravity="center_vertical" />
        <TextView
            android:text=":"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edWeekly"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weekly"
        android:id="@+id/yearly"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:text="Yearly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:gravity="center_vertical" />
        <TextView
            android:text=":"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edYearly"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:id="@+id/options"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/yearly"
        android:gravity="bottom"
        android:layout_marginTop="130dp">

        <TextView
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingLeft="0dp"
            android:clickable="true"
            android:onClick="setBudget" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp"
            android:text="CANCEL"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" />
    </LinearLayout>


</RelativeLayout>
    </ScrollView>
